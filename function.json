{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "functionName": {
        "type": "string"
      },
      "appInsightName": {
        "type": "string"
      },
      "storageAccount": {
        "type": "string"
      },
      "servicePlanName": {
        "type": "string"
      },
      "datalakeApiEndpoint": {
        "type": "string"
      },
      "appConfigName": {
        "type": "string"
      },
      "functionArchProductBatchJsonSize": {
        "type": "int"
      },
      "functionBatchFilesContainerName": {
        "type": "string"
      },
      "blobStorageSyncContainerName": {
        "type": "string" 
      },
      "blobStorageSyncSubContainerName": {
        "type": "string" 
      }
    },
    "resources": [
      {
        "apiVersion": "2020-12-01",
        "name": "[parameters('functionName')]",
        "type": "Microsoft.Web/sites",
        "kind": "functionapp",
        "location": "[resourceGroup().location]",
        "properties": {
            "name": "[parameters('functionName')]",
            "siteConfig": {
                "appSettings": [
                    {
                        "name": "FUNCTIONS_EXTENSION_VERSION",
                        "value": "~4"
                    },
                    {
                        "name": "FUNCTIONS_WORKER_RUNTIME",
                        "value": "dotnet-isolated"
                    },
                    {
                        "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                        "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightName')), '2020-02-02-preview').InstrumentationKey]"
                    },
                    {
                        "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                        "value": "[reference(resourceId('microsoft.insights/components', parameters('appInsightName')), '2020-02-02-preview').ConnectionString]"
                    },
                    {
                        "name": "AzureWebJobsStorage",
                        "value": "[parameters('storageAccount')]"
                    },
                    {
                      "name": "UseLocalConfiguration",
                      "value": "false"
                    },
                    {
                      "name": "ApiEndpointBaseUri",
                      "value": "[parameters('datalakeApiEndpoint')]"
                    },
                    {
                      "name": "AuthEndpointUri",
                      "value": "api/v1/Auth/Login"
                    },
                    {
                      "name": "StorageContainerName",
                      "value": "[parameters('blobStorageSyncContainerName')]"
                    },
                    {
                      "name": "StorageSubContainerName",
                      "value": "[parameters('blobStorageSyncSubContainerName')]"
                    },
                    {
                      "name": "StorageConnectionString",
                      "value": "[parameters('storageAccount')]"
                    },
                    {
                      "name": "AppConfigConnectionString",
                      "value": "[listKeys(resourceId('Microsoft.AppConfiguration/configurationStores', parameters('appConfigName')), '2020-06-01').value[0].connectionString]"
                    },
                    {
                      "name": "ArchProductJsonBatchSize",
                      "value": "[parameters('functionArchProductBatchJsonSize')]"
                    },
                    {
                      "name": "BatchFilesContainerName",
                      "value": "[parameters('functionBatchFilesContainerName')]"                      
                    }
                ],
                "cors": {
                    "allowedOrigins": [
                        "https://portal.azure.com"
                    ]
                },
                "use32BitWorkerProcess": true,
                "ftpsState": "FtpsOnly",
                "alwaysOn": true,
                "netFrameworkVersion": "v7.0"
            },
            "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]",
            "clientAffinityEnabled": false,
            "httpsOnly": true,
            "publicNetworkAccess": "Enabled"
        }
      }
    ]
  }
